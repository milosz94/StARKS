@model StARKS.Models.HomeViewModel


<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <br />

            <div class="form-group">
                <div>
                    <input type="submit" value="Save" class="btn btn-default pull-left" />
                </div>
                <div>
                    @Html.ActionLink("Delete", "DeleteCourse", "Home", new { Cid = Model.Cid }, new { @class = "btn btn-default pull-right" })
                </div>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
